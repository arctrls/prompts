{
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --config=~/.claude/claude-powerline.json"
  },
  "mcpServers": {
    "atlassian": {
      "command": "npx",
      "args": ["-y", "@anthropic/atlassian-mcp-server"],
      "env": {
        "JIRA_URL": "https://ktown4u.atlassian.net",
        "JIRA_EMAIL": "jake@ktown4u.com",
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
      }
    }
  }
}
